@using System.Globalization
@using Microsoft.Extensions.Localization
@using SpotifyPlaylistWebApp
@inject IStringLocalizer<SharedResource> L
@{
    Layout = "Layout";
    ViewData["Title"] = L["Datenschutz_PageTitle"];
}
<!doctype html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1"/>
    <title>@L["Datenschutz_Datenschutzerkl_rung_InetConnector_Playlist_Gene"]</title>

    <meta name="description" content="@L["Datenschutz_MetaDescription"]"/>
    <meta name="keywords" content="@L["Datenschutz_MetaKeywords"]"/>
    <meta name="robots" content="index, follow"/>
    <link rel="canonical" href="https://playlists.inetconnector.com/Home/Datenschutz"/>

    <script src="https://cdn.tailwindcss.com"></script>

    <!-- ‚úÖ Strukturierte Daten f√ºr Google -->
    <script type="application/ld+json">
        {
          "@@context": "https://schema.org",
          "@@type": "WebApplication",
          "name": "@L["Schema_Name"]",
          "url": "https://playlists.inetconnector.com/",
          "description": "@L["Schema_Description"]",
          "applicationCategory": "MusicApplication",
          "operatingSystem": "Web",
          "creator": {
            "@@type": "Organization",
            "name": "InetConnector",
            "url": "https://inetconnector.com"
          },
          "offers": {
            "@@type": "Offer",
            "price": "0",
            "priceCurrency": "EUR"
          }
        }
    </script>

    <style>
        body {
            background: radial-gradient(1000px 600px at 20% 10%, rgba(16,185,129,0.25), transparent 60%), radial-gradient(900px 600px at 90% 0%, rgba(99,102,241,0.25), transparent 60%), #0b0f17;
            color: white;
            font-family: system-ui, sans-serif;
        }

        .glass {
            background: rgba(255,255,255,0.08);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,0.12);
        }

        a {
            color: #10b981;
            text-decoration: underline;
        }

            a:hover {
                color: #34d399;
            }
    </style>
</head>

<body class="min-h-screen font-sans antialiased">
<header class="max-w-5xl mx-auto px-6 pt-10">
    <div class="flex items-center gap-3">
        <div>
            <div class="text-sm uppercase tracking-wider text-white/70">@L["Datenschutz_Datenschutz"]</div>
        </div>
    </div>
</header>

<main class="max-w-4xl mx-auto px-6 py-14">
    <div class="glass rounded-3xl p-8 md:p-10 shadow-xl leading-relaxed text-white/90">

        <h1 class="text-3xl md:text-4xl font-bold mb-4">@L["Datenschutz_Datenschutzerkl_rung"]</h1>
        <p>
            <strong>@L["Datenschutz_Letzte_Aktualisierung"]</strong> @L["Datenschutz_Oktober_2025"]
        </p>

        <p class="mt-6">
            @L["Datenschutz_Diese_Anwendung"]<strong>@L["Datenschutz_Playlist_Generator_f_r_Spotify"]</strong>@L["Datenschutz_nutzt_die"]
            <strong>@L["Datenschutz_Spotify_Web_API"]</strong>@L["Datenschutz_um_personalisierte_Playlists_zu_erstellen_Dabei_"]
        </p>

        <h2 class="text-2xl font-semibold mt-10 mb-2">@L["Datenschutz_Welche_Daten_werden_verwendet"]</h2>
        <ul class="list-disc list-inside space-y-1">
            <li>@L["Datenschutz_Dein_Spotify_Benutzername_und_deine_ffentliche_N"]</li>
            <li>@L["Datenschutz_Deine_Top_Tracks_Lieblingssongs"]</li>
            <li>@L["Datenschutz_Empfohlene_Songs_die_Spotify_anhand_deiner_H_rge"]</li>
        </ul>

        <h2 class="text-2xl font-semibold mt-10 mb-2">@L["Datenschutz_Wof_r_werden_die_Daten_genutzt"]</h2>
        <p>
            @L["Datenschutz_Die_Daten_werden_ausschlie_lich_verwendet_um_Spo"]
        </p>

        <h2 class="text-2xl font-semibold mt-10 mb-2">@L["Datenschutz_Widerruf_des_Zugriffs"]</h2>
        <p>
            @L["Datenschutz_Du_kannst_den_Zugriff_jederzeit_ber_dein"]
            <a href="https://www.spotify.com/account/apps/" target="_blank" rel="noopener">@L["Datenschutz_Spotify_Konto"]</a>
            @L["Datenschutz_widerrufen"]
        </p>

        <h2 class="text-2xl font-semibold mt-10 mb-2">@L["Datenschutz_Spenden_ber_PayPal"]</h2>
        <p>
            @L["Datenschutz_F_r_freiwillige_Spenden_wird_der_Dienst_PayPal_g"]
            <a href="https://www.paypal.com/de/webapps/mpp/ua/privacy-full"
               target="_blank" rel="noopener">
                @L["Datenschutz_www_paypal_com_privacy"]
            </a>@L["Datenschutz_Text"]
        </p>

        <h2 class="text-2xl font-semibold mt-10 mb-2">@L["Datenschutz_Verantwortlich"]</h2>
        <p>
            @L["Datenschutz_Verantwortlich_f_r_den_Betrieb_dieser_Anwendung_"]
            <strong>@L["Datenschutz_playlists_inetconnector_com"]</strong>@L["Datenschutz_Text"]<br/>
            @L["Datenschutz_Bei_Fragen_oder_Anliegen_zum_Datenschutz_kannst_"]
        </p>

        <h2 class="text-2xl font-semibold mt-10 mb-2">@L["Datenschutz_Rechtliches"]</h2>
        <p>
            @L["Datenschutz_Diese_App_steht_in_keiner_offiziellen_Verbindung"]
        </p>

        <hr class="my-10 border-white/20"/>

        <h2 class="text-2xl font-semibold mb-2">@L["Datenschutz_Allgemeine_Hinweise_DSGVO"]</h2>
        <p>
            @L["Datenschutz_Verantwortlich_im_Sinne_der_Datenschutzgesetze"]
        </p>
        <p class="mt-2">
            <strong>@L["Datenschutz_Daniel_Frede"]</strong><br>
            @L["Datenschutz_Bismarckstr_6"]<br>
            @L["Datenschutz_97209_Veitsh_chheim"]<br>
            @L["Datenschutz_E_Mail_info_at_inetconnector_com"]
        </p>

        <p class="mt-6">
            @L["Datenschutz_Beim_Besuch_dieser_Website_werden_lediglich_die_"]
        </p>

        <p class="mt-4">
            @L["Datenschutz_Es_werden_keine_Cookies_keine_Tracking_Tools_und"]
        </p>

        <p class="mt-4">
            @L["Datenschutz_Du_hast_gem_Art_15_ff_DSGVO_jederzeit_das_Recht_"]
        </p>

        <!-- Optional: Google Analytics (DSGVO-konform, vorbereitet) -->
        <!--
        <h2 class="text-2xl font-semibold mt-10 mb-2">@L["Datenschutz_Google_Analytics_optional"]</h2>
        <p>
            @L["Datenschutz_Diese_Website_kann_optional_Google_Analytics_4_v"]
        </p>
        -->

        <p class="mt-6 text-sm text-white/70">
            @L["Datenschutz_Stand_15_Oktober_2025"]
        </p>

        <hr class="my-10 border-white/20"/>

        <!-- üîó Interne Linkstruktur -->
        <div class="text-sm text-center text-white/70 space-x-3">
            <a href="/" class="underline hover:text-white">@L["Datenschutz_Startseite"]</a> @L["Datenschutz_Text"]
            <a href="/Home/Dashboard" class="underline hover:text-white">@L["Datenschutz_Dashboard"]</a> @L["Datenschutz_Text"]
            <a href="/Home/Impressum" class="underline hover:text-white">@L["Datenschutz_Impressum"]</a>
        </div>

        <div class="mt-12 text-center">
            <a href="/Home/Index"
               class="inline-flex items-center justify-center px-6 py-3 rounded-xl bg-emerald-500 hover:bg-emerald-600 text-white font-semibold shadow-lg transition-all duration-200">
                ‚¨ÖÔ∏è @L["Button_BackToHome"]
            </a>
        </div>
    </div>
</main>

@await Html.PartialAsync("Footer")
</body>
</html>
