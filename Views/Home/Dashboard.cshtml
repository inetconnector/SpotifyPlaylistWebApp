<!-- Cooldown + Spenden-Popup Script (unver√§ndert beibehalten) -->


<script>
document.addEventListener('DOMContentLoaded', () => {
  const buttons = document.querySelectorAll('a.btn');
  buttons.forEach(btn => {
    btn.addEventListener('click', async (e) => {
      e.preventDefault();
      if (btn.classList.contains('disabled')) return;
      const url = btn.getAttribute('href');
      const label = btn.querySelector('span:last-child');
      const orig = label ? label.textContent : '';
      btn.classList.add('opacity-50','pointer-events-none','disabled');
      if (label) label.textContent = '‚è≥';
      
      try {
        const res = await fetch(url);
        const text = await res.text();
        // show result below button
        let msg = document.createElement('div');
        msg.innerHTML = text;
        msg.className = 'text-sm text-green-400 mt-2';
        btn.insertAdjacentElement('afterend', msg);
      } catch (err) {
        console.error(err);
        alert('Fehler beim Starten: ' + err);
      } finally {
        setTimeout(() => {
          btn.classList.remove('opacity-50','pointer-events-none','disabled');
          if (label) label.textContent = orig;
        }, 240000); // 4 Minuten Cooldown
      }
    });
  });
});
</script>
