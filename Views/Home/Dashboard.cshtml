            .btn span.icon {
                font-size: 1.9rem;
                filter: drop-shadow(0 0 6px rgba(16,185,129,0.55));
            }

            /* === Tooltip Styling === */
            .btn[data-tip]::after {
                content: attr(data-tip);
                position: absolute;
                bottom: -2.6rem;
                left: 50%;
                transform: translateX(-50%) translateY(6px);
                background: rgba(0, 0, 0, 0.8);
                color: #fff;
                padding: 0.4rem 0.7rem;
                border-radius: 0.5rem;
                font-size: 0.75rem;
