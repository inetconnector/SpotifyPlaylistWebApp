@using Microsoft.AspNetCore.Localization
@{
    var rqf = Context?.Features?.Get<IRequestCultureFeature>();
    var current = rqf?.RequestCulture?.UICulture?.Name ?? "en-US";
    var returnUrl = Context?.Request?.Path + Context?.Request?.QueryString;
}

<div class="lc-switch" role="group" aria-label="Language switcher">
    <a asp-controller="Language" asp-action="SetLanguage" asp-route-culture="de-DE" asp-route-returnUrl="@returnUrl"
       class="lc-btn @(current == "de-DE" ? "active" : "")" aria-current="@(current == "de-DE" ? "true" : "false")" title="Deutsch">
        <span class="flag">ðŸ‡©ðŸ‡ª</span><span class="label">DE</span>
    </a>
    <a asp-controller="Language" asp-action="SetLanguage" asp-route-culture="en-US" asp-route-returnUrl="@returnUrl"
       class="lc-btn @(current == "en-US" ? "active" : "")" aria-current="@(current == "en-US" ? "true" : "false")" title="English">
        <span class="flag">ðŸ‡ºðŸ‡¸</span><span class="label">EN</span>
    </a>
</div>

<style>
.lc-switch {
    position: fixed;
    top: 10px;
    right: 20px;
    display: flex;
    gap: .5rem;
    align-items: center;
    z-index: 999;
}
.lc-btn {
    display: inline-flex;
    align-items: center;
    gap: .35rem;
    padding: .35rem .6rem;
    border-radius: .5rem;
    border: 1px solid #bbb;
    color: #fff;
    text-decoration: none;
    background: rgba(255,255,255,.05);
    backdrop-filter: saturate(140%);
    transition: transform .08s ease, background .2s ease, border-color .2s ease;
}
.lc-btn:hover { background: rgba(255,255,255,.12); }
.lc-btn.active {
    border-color: #fff;
    background: rgba(255,255,255,.22);
    font-weight: 600;
}
.flag { font-size: 1rem; line-height: 1; }
.label { font-size: .9rem; }
</style>