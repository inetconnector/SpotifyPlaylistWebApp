@using System.Collections.Generic
@using System.Globalization
@using System.Text.Json
@using Microsoft.Extensions.Localization
@using SpotifyPlaylistWebApp
@inject IStringLocalizer<SharedResource> L

@{
    ViewData["Title"] = L["DirectDownload_PageTitle"];
    ViewData["BrowserTitle"] = L["DirectDownload_PageTitle"];
    ViewData["BodyClass"] = "min-h-screen font-sans antialiased";
    ViewData["BodyStyle"] = "padding-top: 64px";
    ViewData["MainClass"] = "flex flex-col gap-10";
    ViewData["UseDefaultMainLayout"] = false;
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isGerman = lang == "de";
    var plexDirectStrings = new Dictionary<string, string>
    {
        ["loadPlaylistsOption"] = $"{L["DirectDownload_LoadPlaylists"]}‚Ä¶",
        ["loadPlaylistsError"] = L["DirectDownload_LoadPlaylists_Error"],
        ["metaPlaylistsFound"] = L["DirectDownload_Meta_PlaylistsFound"],
        ["statusSelectPlaylist"] = L["DirectDownload_Status_SelectPlaylist"],
        ["statusLoadingTrackUrls"] = L["DirectDownload_Status_LoadingTrackUrls"],
        ["statusLoadUrlsError"] = L["DirectDownload_Status_LoadUrlsError"],
        ["statusNoItems"] = L["DirectDownload_Status_NoItems"],
        ["statusLoadingFiles"] = L["DirectDownload_Status_LoadingFiles"],
        ["statusLoadingFileProgress"] = L["DirectDownload_Status_LoadingFileProgress"],
        ["statusCreatingZip"] = L["DirectDownload_Status_CreatingZip"],
        ["statusDownloadComplete"] = L["DirectDownload_Status_DownloadComplete"],
        ["statusDownloadFailed"] = L["DirectDownload_Status_DownloadFailed"]
    };
}

@section HeadContent {
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="@L["Meta_Description"]" />
    <meta name="keywords" content="@L["Meta_Keywords"]" />
    <meta name="author" content="InetConnector" />
    <meta name="robots" content="index, follow" />

    <meta property="og:locale" content="@(isGerman ? "de_DE" : "en_US")" />
    <meta property="og:title" content="@L["DirectDownload_PageTitle"]" />
    <meta property="og:description" content="@L["OG_Description"]" />
    <meta property="og:image" content="https://playlists.inetconnector.com/preview.jpg" />
    <meta property="og:url" content="@(isGerman ? "https://playlists.inetconnector.com/de" : "https://playlists.inetconnector.com/en")" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@L["DirectDownload_PageTitle"]" />
    <meta name="twitter:description" content="@L["Twitter_Description"]" />
    <meta name="twitter:image" content="https://playlists.inetconnector.com/preview.jpg" />

    <link rel="canonical" href="@(isGerman ? "https://playlists.inetconnector.com/de" : "https://playlists.inetconnector.com/en")" />
    <link rel="alternate" href="https://playlists.inetconnector.com/de" hreflang="de" />
    <link rel="alternate" href="https://playlists.inetconnector.com/en" hreflang="en" />
    <link rel="alternate" href="https://playlists.inetconnector.com/es" hreflang="es" />

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="sitemap" type="application/xml" title="@L["Attr_Index_Sitemap"]" href="/sitemap.xml" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            background: radial-gradient(1000px 600px at 20% 10%, rgba(16,185,129,.25), transparent 60%),
                        radial-gradient(900px 600px at 90% 0%, rgba(99,102,241,.25), transparent 60%),
                        #0b0f17;
            color: white;
            font-family: system-ui, sans-serif;
        }

        .glass {
            background: rgba(255,255,255,.08);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,.12);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 0.6rem;
            padding: 0.85rem 1.4rem;
            border-radius: 0.9rem;
            font-weight: 600;
            color: white;
            text-decoration: none;
            background: linear-gradient(145deg, rgba(16,185,129,0.28), rgba(99,102,241,0.22));
            border: 1px solid rgba(255,255,255,0.2);
            box-shadow: 0 18px 30px rgba(15,118,110,0.35);
            transition: all 0.2s ease;
        }

        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 24px 36px rgba(5,150,105,0.35);
        }
    </style>
}

<header class="max-w-5xl mx-auto px-6">
    <h1 class="text-3xl md:text-4xl font-bold mb-3">@L["DirectDownload_PageTitle"]</h1>
    <p class="text-white/70">@L["DirectDownload_Intro"]</p>
</header>

<div class="glass max-w-5xl mx-auto px-6 py-8 md:py-10 rounded-3xl shadow-xl">
    <div class="grid gap-10 md:grid-cols-2">
        <section class="space-y-4">
            <div>
                <label for="playlistSelect" class="block text-sm font-semibold uppercase tracking-wide text-white/70">
                    @L["DirectDownload_SelectPlaylist"]
                </label>
                <select id="playlistSelect" class="mt-2 w-full rounded-xl bg-white/5 border border-white/15 px-4 py-3 text-white focus:ring-emerald-500 focus:border-emerald-500">
                    <option value="">@L["DirectDownload_LoadPlaylists"]‚Ä¶</option>
                </select>
                <div id="playlistMeta" class="mt-3 text-xs text-white/60"></div>
            </div>

            <button id="btnShowPlexPlaylist" type="button" class="btn w-full justify-center">
                üëÄ @L["DirectDownload_ShowPlaylist"]
            </button>

            <p class="text-sm text-white/60">@L["DirectDownload_Description"]</p>
        </section>

        <section class="space-y-4">
            <h2 class="text-xl font-semibold">@L["DirectDownload_ExportTitle"]</h2>
            <p class="text-sm text-white/70">@L["DirectDownload_ExportDescription"]</p>

            <button id="btnStartDownload" class="btn w-full justify-center">
                ‚¨áÔ∏è @L["DirectDownload_Start"]
            </button>

            <div id="statusArea" class="min-h-[3rem] rounded-xl border border-white/10 bg-white/5 px-4 py-3 text-sm text-white/80"></div>

            <div class="text-xs text-white/60 space-y-1">
                <p>@L["DirectDownload_StatusHint"]</p>
                <p>@L["DirectDownload_StatusHintFiles"]</p>
            </div>
        </section>
    </div>
</div>

<div id="playlistModal" class="fixed inset-0 bg-black/70 backdrop-blur-sm hidden z-50 flex items-center justify-center px-4">
    <div class="glass max-w-2xl w-full rounded-3xl p-6 relative">
        <div class="flex items-start justify-between mb-4">
            <h3 id="playlistModalTitle" class="text-xl font-semibold text-white"></h3>
            <button id="closeModal" class="text-white/60 hover:text-white">‚úñ</button>
        </div>
        <div id="playlistTracks" class="max-h-80 overflow-y-auto space-y-2 text-white/80 text-sm"></div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script>
        window.PlexDirectStrings = @Html.Raw(JsonSerializer.Serialize(plexDirectStrings));
    </script>
    <script src="/js/plex-direct-flow.js"></script>
    <script>
        (function initDirectDownloadPage() {
            const modalStrings = {
                loading: @Html.Raw(JsonSerializer.Serialize(L["SpotifyToPlex_Loading"].Value)),
                noTracks: @Html.Raw(JsonSerializer.Serialize(L["SpotifyToPlex_NoTracksFound"].Value)),
                loadError: @Html.Raw(JsonSerializer.Serialize(L["SpotifyToPlex_LoadError"].Value)),
                selectPlaylist: @Html.Raw(JsonSerializer.Serialize(L["DirectDownload_Status_SelectPlaylist"].Value)),
                modalTitle: @Html.Raw(JsonSerializer.Serialize(L["SpotifyToPlex_PlaylistContent"].Value))
            };

            const htmlMap = {
                "&": "&amp;",
                "<": "&lt;",
                ">": "&gt;",
                '"': "&quot;",
                "'": "&#39;"
            };

            const escapeHtml = (value) => {
                if (value === null || value === undefined) return "";
                return String(value).replace(/[&<>"']/g, ch => htmlMap[ch] ?? ch);
            };

            const init = () => {
                if (window.loadPlexPlaylists) {
                    window.loadPlexPlaylists({
                        selectId: "playlistSelect",
                        metaId: "playlistMeta"
                    });
                }

                const modal = document.getElementById("playlistModal");
                const tracksContainer = document.getElementById("playlistTracks");
                const modalTitle = document.getElementById("playlistModalTitle");
                const closeModalButton = document.getElementById("closeModal");
                const statusArea = document.getElementById("statusArea");

                const hideModal = () => {
                    if (modal) {
                        modal.classList.add("hidden");
                    }
                };

                closeModalButton?.addEventListener("click", hideModal);
                modal?.addEventListener("click", ev => {
                    if (ev.target === modal) {
                        hideModal();
                    }
                });
                document.addEventListener("keydown", ev => {
                    if (ev.key === "Escape") {
                        hideModal();
                    }
                });

                const showPlaylistButton = document.getElementById("btnShowPlexPlaylist");
                if (showPlaylistButton) {
                    showPlaylistButton.addEventListener("click", async () => {
                        const ddl = document.getElementById("playlistSelect");
                        const playlistKey = ddl?.value;

                        if (!ddl || !playlistKey) {
                            if (statusArea) {
                                statusArea.style.color = "#ff7070";
                                statusArea.textContent = modalStrings.selectPlaylist;
                            }
                            return;
                        }

                        const selectedOption = ddl.options[ddl.selectedIndex];
                        const playlistName = (selectedOption?.textContent || "")
                            .replace(/\s*\([^)]*\)\s*$/g, "")
                            .trim();

                        if (modalTitle) {
                            modalTitle.textContent = playlistName || modalStrings.modalTitle;
                        }

                        if (tracksContainer) {
                            tracksContainer.innerHTML = `<div class="text-center text-white/60">${modalStrings.loading}</div>`;
                        }

                        modal?.classList.remove("hidden");

                        try {
                            const res = await fetch(`/HomePlex/GetPlexPlaylistTracks?ratingKey=${encodeURIComponent(playlistKey)}`);
                            const data = await res.json();

                            if (!tracksContainer) {
                                return;
                            }

                            if (data.success) {
                                const items = Array.isArray(data.tracks) ? data.tracks : [];
                                if (items.length) {
                                    tracksContainer.innerHTML = items.map(t => {
                                        const title = escapeHtml(t.title || "");
                                        const artist = escapeHtml(t.artist || "");
                                        return `
                                            <div class="bg-white/5 border border-white/10 rounded-lg px-4 py-2">
                                                <div class="font-semibold text-white/90">${title || "‚Äî"}</div>
                                                ${artist ? `<div class="text-white/60 text-xs mt-1">${artist}</div>` : ""}
                                            </div>`;
                                    }).join("");
                                } else {
                                    tracksContainer.innerHTML = `<div class="text-center text-white/60">${modalStrings.noTracks}</div>`;
                                }
                            } else {
                                const msg = escapeHtml(data.message || modalStrings.loadError);
                                tracksContainer.innerHTML = `<div class="text-center text-rose-300">${msg}</div>`;
                            }
                        } catch (err) {
                            if (tracksContainer) {
                                tracksContainer.innerHTML = `<div class="text-center text-rose-300">${modalStrings.loadError}</div>`;
                            }
                            console.error(err);
                        }
                    });
                }

                const btnStart = document.getElementById("btnStartDownload");
                if (btnStart && window.startPlexDirectZip) {
                    btnStart.addEventListener("click", (ev) => {
                        ev.preventDefault();
                        window.startPlexDirectZip({
                            selectId: "playlistSelect",
                            statusId: "statusArea"
                        });
                    });
                }
            };

            if (document.readyState === "loading") {
                document.addEventListener("DOMContentLoaded", init, { once: true });
            } else {
                init();
            }
        })();
    </script>
}
