@using System.Collections.Generic
@using System.Globalization
@using Microsoft.Extensions.Localization
@using SpotifyPlaylistWebApp
@using System.Text.Json
@inject IStringLocalizer<SharedResource> L

@{ 
    Layout = "Layout";
    ViewData["Title"] = L["DirectDownload_PageTitle"];
    var lang = CultureInfo.CurrentUICulture.TwoLetterISOLanguageName;
    var isGerman = lang == "de";
    var plexDirectStrings = new Dictionary<string, string>
    {
        ["loadPlaylistsOption"] = $"{L["DirectDownload_LoadPlaylists"]}…",
        ["loadPlaylistsError"] = L["DirectDownload_LoadPlaylists_Error"],
        ["metaPlaylistsFound"] = L["DirectDownload_Meta_PlaylistsFound"],
        ["statusSelectPlaylist"] = L["DirectDownload_Status_SelectPlaylist"],
        ["statusLoadingTrackUrls"] = L["DirectDownload_Status_LoadingTrackUrls"],
        ["statusLoadUrlsError"] = L["DirectDownload_Status_LoadUrlsError"],
        ["statusNoItems"] = L["DirectDownload_Status_NoItems"],
        ["statusLoadingFiles"] = L["DirectDownload_Status_LoadingFiles"],
        ["statusLoadingFileProgress"] = L["DirectDownload_Status_LoadingFileProgress"],
        ["statusCreatingZip"] = L["DirectDownload_Status_CreatingZip"],
        ["statusDownloadComplete"] = L["DirectDownload_Status_DownloadComplete"],
        ["statusDownloadFailed"] = L["DirectDownload_Status_DownloadFailed"]
    };
}

<!doctype html>
<html lang="@CultureInfo.CurrentUICulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>@L["DirectDownload_PageTitle"] – @L["Index_InetConnector"]</title>

    <meta name="description" content="@L["Meta_Description"]" />
    <meta name="keywords" content="@L["Meta_Keywords"]" />
    <meta name="author" content="InetConnector" />
    <meta name="robots" content="index, follow" />

    <meta property="og:locale" content="@(isGerman ? "de_DE" : "en_US")" />
    <meta property="og:title" content="@L["DirectDownload_PageTitle"]" />
    <meta property="og:description" content="@L["OG_Description"]" />
    <meta property="og:image" content="https://playlists.inetconnector.com/preview.jpg" />
    <meta property="og:url" content="@(isGerman ? "https://playlists.inetconnector.com/de" : "https://playlists.inetconnector.com/en")" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="@L["DirectDownload_PageTitle"]" />
    <meta name="twitter:description" content="@L["Twitter_Description"]" />
    <meta name="twitter:image" content="https://playlists.inetconnector.com/preview.jpg" />

    <link rel="canonical" href="@(isGerman ? "https://playlists.inetconnector.com/de" : "https://playlists.inetconnector.com/en")" />
    <link rel="alternate" href="https://playlists.inetconnector.com/de" hreflang="de" />
    <link rel="alternate" href="https://playlists.inetconnector.com/en" hreflang="en" />
    <link rel="alternate" href="https://playlists.inetconnector.com/es" hreflang="es" />

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="sitemap" type="application/xml" title="@L["Attr_Index_Sitemap"]" href="/sitemap.xml" />

    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body {
            background: radial-gradient(1000px 600px at 20% 10%, rgba(16,185,129,.25), transparent 60%), radial-gradient(900px 600px at 90% 0%, rgba(99,102,241,.25), transparent 60%), #0b0f17;
            color: white;
            font-family: system-ui, sans-serif;
        }

        .glass {
            background: rgba(255,255,255,.08);
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255,255,255,.12);
        }

        .btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: .9rem 1.6rem;
            border-radius: 1rem;
            font-size: 1.125rem;
            font-weight: 600;
            color: #111827;
            background: linear-gradient(90deg,#FFC727,#FFAA00,#F09500);
            transition: all .25s ease;
            box-shadow: 0 0 10px rgba(0,0,0,.25);
        }

            .btn:hover {
                filter: brightness(1.1);
                transform: translateY(-2px);
            }

        .btn-outline {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: .85rem 1.4rem;
            border-radius: 1rem;
            font-weight: 600;
            border: 1px solid rgba(255,255,255,.15);
            color: #e5e7eb;
            background: rgba(255,255,255,.06);
        }

            .btn-outline:hover {
                background: rgba(255,255,255,.1);
            }

        select {
            background-color: rgba(255,255,255,.06);
        }

            select option {
                color: #111 !important;
                background-color: #fff !important;
            }
    </style>
</head>

<body style="padding-top:54px" class="min-h-screen flex flex-col font-sans antialiased">

    <main class="flex-grow max-w-3xl mx-auto px-6 py-16">
        <div class="glass rounded-3xl p-8 md:p-10 shadow-xl text-center leading-relaxed">

            <div class="flex justify-center mb-6">
                <div class="w-14 h-14 rounded-2xl bg-emerald-500 grid place-items-center shadow-lg text-2xl">⬇️</div>
            </div>

            <h1 class="text-3xl md:text-4xl font-bold mb-4">@L["DirectDownload_Title"]</h1>
            <p class="text-white/80 mb-6">@L["DirectDownload_Subtitle"]</p>

            <section class="text-white/70 text-sm max-w-lg mx-auto">
                <h2 class="text-xl font-semibold mb-2">@L["DirectDownload_AvailablePlaylists"]</h2>
                <ul class="list-disc text-left text-white/80 mt-6 space-y-2 mx-auto max-w-md pl-16">
                    <li>@L["DirectDownload_SelectPlaylist_Help"]</li>
                    <li>@L["DirectDownload_ParallelDownloads"]</li>
                </ul>
            </section>

            <section class="mt-10 text-left">
                <div class="glass rounded-2xl p-6 md:p-8 shadow-inner">

                    <h3 class="text-2xl font-semibold mb-1">@L["DirectDownload_SelectPlaylist"]</h3>
                    <p class="text-white/70 mb-5">@L["DirectDownload_Download_Help"]</p>

                    <div class="mb-6">
                        <label for="playlistSelect" class="block text-sm text-white/80 mb-2">
                            @L["DirectDownload_SelectPlaylist"]
                        </label>
                        <div class="flex gap-3">
                            <div class="relative flex-1">
                                <select id="playlistSelect"
                                        class="w-full appearance-none rounded-xl border border-white/15 text-white/90 px-4 py-3 pr-10 focus:outline-none focus:ring-2 focus:ring-amber-400 transition">
                                    <option>@L["DirectDownload_LoadPlaylists"]…</option>
                                </select>
                                <svg class="pointer-events-none absolute right-3 top-1/2 -translate-y-1/2 w-5 h-5 text-white/60" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                                </svg>
                            </div>
                            <button type="button"
                                    id="btnShowPlexPlaylist"
                                    class="shrink-0 px-4 py-3 rounded-xl bg-amber-500/90 hover:bg-amber-400 transition text-black font-semibold shadow-lg"
                                    title="@L["SpotifyToPlex_ShowPlaylist"]">
                                ?
                            </button>
                        </div>
                        <p id="playlistMeta" class="text-xs text-white/60 mt-2 hidden"></p>
                    </div>

                    <!-- ACTION BUTTONS -->
                    <div class="flex flex-col sm:flex-row gap-3 mt-6">
                        <a href="/Home/Index" class="btn-outline flex-1">⬅️ @L["Button_BackToHome"]</a>
                        <button id="btnStartDownload" type="button" class="btn flex-1">⬇️ @L["DirectDownload_Start"]</button>
                    </div>

                    <div id="statusArea" class="rounded-xl mt-5 bg-black/30 border border-white/10 p-4 min-h-[64px] text-sm text-white/80"></div>
                </div>
            </section>

            <div class="mt-12 glass rounded-2xl p-6 md:p-8 shadow-inner text-center">
                <h2 class="text-2xl font-semibold mb-3">@L["Index_Unterst_tze_das_Projekt"]</h2>
                <p class="text-white/80 mb-4">@L["Index_Gef_llt_dir_dieses_Tool_Unterst_tze_die_Weiteren"]</p>
                <a href="https://www.paypal.com/donate/?hosted_button_id=ZH7VMENE4XQ3G" target="_blank" rel="noopener" class="btn mb-6">
                    @L["Index_Jetzt_ber_PayPal_spenden"]
                </a>
            </div>

        </div>
    </main>

    <div id="playlistModal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/70 px-4">
        <div class="glass rounded-2xl max-w-lg w-full shadow-2xl relative p-6 md:p-7 border border-white/15">
            <button type="button" id="closeModal" class="absolute right-3 top-3 text-white/60 hover:text-white text-2xl leading-none">&times;</button>
            <h3 id="playlistModalTitle" class="text-xl font-semibold mb-1">@L["SpotifyToPlex_PlaylistContent"]</h3>
            <p class="text-sm text-white/60 mb-4">@L["DirectDownload_SelectPlaylist_Help"]</p>
            <div id="playlistTracks" class="max-h-80 overflow-y-auto space-y-2 text-white/80 text-sm"></div>
        </div>
    </div>

    @await Html.PartialAsync("Footer")

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script>
        window.PlexDirectStrings = @Html.Raw(JsonSerializer.Serialize(plexDirectStrings));
    </script>
    <script src="/js/plex-direct-flow.js"></script>
    <script>
        (function initDirectDownloadPage() {
            const modalStrings = {
                loading: @Html.Raw(JsonSerializer.Serialize(L["SpotifyToPlex_Loading"].Value)),
                noTracks: @Html.Raw(JsonSerializer.Serialize(L["SpotifyToPlex_NoTracksFound"].Value)),
                loadError: @Html.Raw(JsonSerializer.Serialize(L["SpotifyToPlex_LoadError"].Value)),
                selectPlaylist: @Html.Raw(JsonSerializer.Serialize(L["DirectDownload_Status_SelectPlaylist"].Value)),
                modalTitle: @Html.Raw(JsonSerializer.Serialize(L["SpotifyToPlex_PlaylistContent"].Value))
            };

            const htmlMap = {
                "&": "&amp;",
                "<": "&lt;",
                ">": "&gt;",
                '"': "&quot;",
                "'": "&#39;"
            };

            const escapeHtml = (value) => {
                if (value === null || value === undefined) return "";
                return String(value).replace(/[&<>"']/g, ch => htmlMap[ch] ?? ch);
            };

            const init = () => {
                // Playlists automatisch laden
                if (window.loadPlexPlaylists) {
                    window.loadPlexPlaylists({
                        selectId: "playlistSelect",
                        metaId: "playlistMeta"
                    });
                }

                const modal = document.getElementById("playlistModal");
                const tracksContainer = document.getElementById("playlistTracks");
                const modalTitle = document.getElementById("playlistModalTitle");
                const closeModalButton = document.getElementById("closeModal");
                const statusArea = document.getElementById("statusArea");

                const hideModal = () => {
                    if (modal) {
                        modal.classList.add("hidden");
                    }
                };

                closeModalButton?.addEventListener("click", hideModal);
                modal?.addEventListener("click", ev => {
                    if (ev.target === modal) {
                        hideModal();
                    }
                });
                document.addEventListener("keydown", ev => {
                    if (ev.key === "Escape") {
                        hideModal();
                    }
                });

                const showPlaylistButton = document.getElementById("btnShowPlexPlaylist");
                if (showPlaylistButton) {
                    showPlaylistButton.addEventListener("click", async () => {
                        const ddl = document.getElementById("playlistSelect");
                        const playlistKey = ddl?.value;

                        if (!ddl || !playlistKey) {
                            if (statusArea) {
                                statusArea.style.color = "#ff7070";
                                statusArea.textContent = modalStrings.selectPlaylist;
                            }
                            return;
                        }

                        const selectedOption = ddl.options[ddl.selectedIndex];
                        const playlistName = (selectedOption?.textContent || "")
                            .replace(/\s*\([^)]*\)\s*$/g, "")
                            .trim();

                        if (modalTitle) {
                            modalTitle.textContent = playlistName || modalStrings.modalTitle;
                        }

                        if (tracksContainer) {
                            tracksContainer.innerHTML = `<div class="text-center text-white/60">${modalStrings.loading}</div>`;
                        }

                        modal?.classList.remove("hidden");

                        try {
                            const res = await fetch(`/HomePlex/GetPlexPlaylistTracks?ratingKey=${encodeURIComponent(playlistKey)}`);
                            const data = await res.json();

                            if (!tracksContainer) {
                                return;
                            }

                            if (data.success) {
                                const items = Array.isArray(data.tracks) ? data.tracks : [];
                                if (items.length) {
                                    tracksContainer.innerHTML = items.map(t => {
                                        const title = escapeHtml(t.title || "");
                                        const artist = escapeHtml(t.artist || "");
                                        return `
                                            <div class="bg-white/5 border border-white/10 rounded-lg px-4 py-2">
                                                <div class="font-semibold text-white/90">${title || "—"}</div>
                                                ${artist ? `<div class="text-white/60 text-xs mt-1">${artist}</div>` : ""}
                                            </div>`;
                                    }).join("");
                                } else {
                                    tracksContainer.innerHTML = `<div class="text-center text-white/60">${modalStrings.noTracks}</div>`;
                                }
                            } else {
                                const msg = escapeHtml(data.message || modalStrings.loadError);
                                tracksContainer.innerHTML = `<div class="text-center text-rose-300">${msg}</div>`;
                            }
                        } catch (err) {
                            if (tracksContainer) {
                                tracksContainer.innerHTML = `<div class="text-center text-rose-300">${modalStrings.loadError}</div>`;
                            }
                            console.error(err);
                        }
                    });
                }

                // Download starten → ZIP erzeugen & herunterladen
                const btnStart = document.getElementById("btnStartDownload");
                if (btnStart && window.startPlexDirectZip) {
                    btnStart.addEventListener("click", (ev) => {
                        ev.preventDefault();
                        window.startPlexDirectZip({
                            selectId: "playlistSelect",
                            statusId: "statusArea"
                        });
                    });
                }
            };

            if (document.readyState === "loading") {
                document.addEventListener("DOMContentLoaded", init, { once: true });
            } else {
                init();
            }
        })();
    </script>

</body>
</html>
